<%= form_for @artist do |f| %>

    <div class="form-group">
       <%= f.label :name %>
       <%= f.text_field :name, class: "form-control", placeholder: "Artist's name" %>
    </div>

    <div class="form-group">
       <%= f.label :country %>
       <%= f.text_field :country, class: "form-control", placeholder: "and country"   %>
    </div>

    <div class="form-group">
       <%= f.label :image %>
       <%= f.file_field :image, class: "form-control"%>
    </div>

    <div class="form-group">
       <%= f.label :bio %>
       <%= f.text_area :bio, class: "form-control", rows: 6 %>
    </div>

    <%= f.submit (@author.new_record? ? "Create" : "Update"), class: "form-control btn-primary" %>

<% end %>
